{
  "name": "@channel.io/design-system",
  "version": "0.3.0",
  "description": "Design System by Channel",
  "repository": {
    "type": "git",
    "url": "https://github.com/channel-io/design-system"
  },
  "main": "build/index.js",
  "module": "build/index.es.js",
  "sideEffects": false,
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "verify": "ts-node -P ./tsconfig.script.json scripts/check-npm-version.ts",
    "storybook": "start-storybook -p 4101",
    "lint-staged": "lint-staged",
    "lint": "npm run eslint-all && npm run stylelint-all",
    "eslint-all": "eslint 'src/**/*.+(js|ts)?(x)'",
    "stylelint-all": "stylelint src/**/*.styled.{js,ts}",
    "typecheck": "tsc",
    "test": "npm run lint && npm run typecheck && npm run jest",
    "jest": "cross-env BABEL_ENV=test jest",
    "jest:watch": "cross-env BABEL_ENV=test jest --watch",
    "build": "cross-env BABEL_ENV=build rollup -c",
    "prebuild": "npm run typecheck",
    "prepublishOnly": "npm run build:icon && npm run build && npm run build:storybook && npm run deploy:storybook",
    "antlr:lexer": "antlr4ts src/components/Editor/utils/Parsers/Antlr/TextBlockLexer.g4",
    "antlr:parser": "antlr4ts src/components/Editor/utils/Parsers/Antlr/TextBlockParser.g4",
    "build:storybook": "build-storybook",
    "build:icon": "./scripts/build-icon.sh",
    "deploy:storybook": "storybook-to-ghpages --remote=upstream"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run verify && npm run lint-staged && npm run typecheck && npm run jest"
    }
  },
  "lint-staged": {
    "src/**/*.styled.{js,ts}": [
      "stylelint"
    ],
    "src/**/*.(js|ts)?(x)": [
      "eslint"
    ]
  },
  "engines": {
    "node": "12.18.0",
    "npm": "6.14.2"
  },
  "keywords": [
    "design",
    "react",
    "channel"
  ],
  "author": "Channel Corp.",
  "license": "ISC",
  "browserslist": [
    "ie >= 11",
    "> 1% in KR",
    "> 1% in JP",
    "> 1% in US"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/plugin-transform-classes": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@channel.io/eslint-config": "^1.0.8",
    "@channel.io/stylelint-config": "^1.2.0",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-controls": "^6.1.11",
    "@storybook/addon-docs": "^6.1.11",
    "@storybook/addon-toolbars": "^6.1.11",
    "@storybook/react": "^6.1.11",
    "@storybook/storybook-deployer": "^2.8.7",
    "@svgr/babel-plugin-add-jsx-attribute": "^5.4.0",
    "@svgr/babel-plugin-remove-jsx-attribute": "^5.4.0",
    "@svgr/cli": "^5.5.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^10.4.9",
    "@types/antlr4": "^4.7.2",
    "@types/jest": "^25.2.3",
    "@types/lodash-es": "^4.17.4",
    "@types/prosemirror-commands": "^1.0.3",
    "@types/prosemirror-inputrules": "^1.0.3",
    "@types/prosemirror-keymap": "^1.0.3",
    "@types/prosemirror-model": "^1.11.1",
    "@types/prosemirror-state": "^1.2.5",
    "@types/prosemirror-view": "^1.16.1",
    "@types/react": "^16.14.2",
    "@types/styled-components": "^5.1.5",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-imports": "^2.0.0",
    "babel-preset-react-app": "^9.1.2",
    "core-js": "^3.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^22.21.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "paths.macro": "^3.0.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "regenerator-runtime": "^0.13.7",
    "rollup": "^2.37.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "styled-components": "^5.2.1",
    "stylelint": "^13.8.0",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "styled-components": ">=5"
  },
  "dependencies": {
    "antlr4": "^4.8.0",
    "core-decorators": "^0.20.0",
    "lodash-es": "^4.17.15",
    "prosemirror-commands": "^1.1.4",
    "prosemirror-inputrules": "^1.1.3",
    "prosemirror-keymap": "^1.1.4",
    "prosemirror-model": "^1.13.0",
    "prosemirror-state": "^1.3.3",
    "prosemirror-view": "^1.16.5",
    "ssr-window": "^2.0.0",
    "uuid": "^8.3.2"
  }
}
