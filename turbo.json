{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "outputs": [
        ".eslintcache",
        ".stylelintcache"
      ]
    },
    "typecheck": {
      "outputs": [],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts"
      ]
    },
    "test": {
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.js"
      ]
    },
    "test:ci": {
      "outputs": [
        "coverage/**"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.js"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
