{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "outputs": [
        ".eslintcache",
        ".stylelintcache"
      ]
    },
    "typecheck": {
      "outputs": [],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts"
      ]
    },
    "test": {
      "outputs": [
        ".jestcache"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.js"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "bezier-figma-plugin#typecheck": {
      "outputs": [],
      "dependsOn": [
        "^build"
      ]
    },
    "@channel.io/bezier-react#typecheck": {
      "outputs": [],
      "dependsOn": [
        "^build"
      ]
    },
    "@channel.io/bezier-react#test": {
      "outputs": [
        ".jestcache"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "@channel.io/bezier-codemod#test": {
      "outputs": [
        ".jestcache"
      ],
      "dependsOn": [
        "@channel.io/bezier-react#build"
      ]
    }
  }
}
