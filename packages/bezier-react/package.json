    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "peerDependenciesMeta": {
    "@channel.io/bezier-icons": {
      "optional": true
    }
  },
  "dependencies": {
    "@channel.io/bezier-tokens": "0.1.0-alpha.5",
