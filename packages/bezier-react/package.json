    "@radix-ui/react-toolbar": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@radix-ui/react-visually-hidden": "^1.0.3",
    "classnames": "^2.5.1",
    "react-textarea-autosize": "8.3.4",
    "ssr-window": "^4.0.2",
    "uuid": "^9.0.1"
  }
}
