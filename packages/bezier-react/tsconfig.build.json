{
  "extends": "./tsconfig.json",
  "include": [
    "src/index.ts",
    "src/alpha-components/index.ts",
    "src/custom.d.ts"
  ],
  "compilerOptions": {
    "outDir": "dist/types",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  }
}
