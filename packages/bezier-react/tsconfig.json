{
  "extends": "tsconfig/browser.json",
  "compilerOptions": {
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "types": ["react", "jest"],
  "include": [
    "src",
    "jest.setup.ts",
    ".storybook"
  ],
}
