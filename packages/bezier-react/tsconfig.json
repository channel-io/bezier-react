{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "declarationDir": "dist",
    "baseUrl": "./",
    "paths": {
      "Components/*": ["src/components/*"],
      "Constants/*": ["src/constants/*"],
      "Foundation": ["src/foundation"],
      "Foundation/*": ["src/foundation/*"],
      "Hooks/*": ["src/hooks/*"],
      "Layout/*": ["src/layout/*"],
      "Providers/*": ["src/providers/*"],
      "Types/*": ["src/types/*"],
      "Utils/*": ["src/utils/*"],
      "Worklets/*": ["src/worklets/*"]
    }
  },
  "types": ["react", "jest"],
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
