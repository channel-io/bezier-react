{
  "extends": "tsconfig/script.json",
  "include": [
    "bin/**/*",
    "transforms/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/tests/fixtures/**/*",
  ],
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2020"],
    "types": ["node", "jest"],
  },
}
