{
	"extends": "tsconfig/script.json",
	"compilerOptions": {
		"outDir": "dist",
		"module": "node16",
		"moduleResolution": "node16",
		"moduleDetection": "force",
		"target": "es2020",
		"lib": ["DOM", "DOM.Iterable", "es2020"],
    "esModuleInterop": true,
		"jsx": "react",
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
	},
	"include": [
    "src",
  ],
	"exclude": [
    "node_modules",
    "**/tests/**/fixtures/**/*",
  ],
}
