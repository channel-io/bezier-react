  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules"]
}